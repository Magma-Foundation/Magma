import { JavaLang } from com.meti.lang;
import { Lang } from com.meti.lang;
import { MapNode } from com.meti.node;
import { MagmaRenderer } from com.meti.render;
import { NodeRule } from com.meti.rule;
import { StripRule } from com.meti.rule;
import { TypeRule } from com.meti.rule;
import { IOException } from java.io;
import { Files } from java.nio.file;
import { Paths } from java.nio.file;
import { List } from java.util;
import { Optional } from java.util;
import { Collectors } from java.util.stream;
import { Discard } from com.meti.rule.DiscardRule;
import { $ } from com.meti.rule.ExtractRule;
import { Node } from com.meti.rule.NodeRule;
import { split } from com.meti.rule.NodeSplitRule;
import { Left } from com.meti.rule.RequireLeftRule;
import { Right } from com.meti.rule.RequireRightRule;
import { FirstInclusive } from com.meti.rule.SplitByFirstSliceInclusiveRule;
import { First } from com.meti.rule.SplitByFirstSliceRule;
import { Last } from com.meti.rule.SplitByLastSliceRule;
import { Strip } from com.meti.rule.StripRule;
import { Type } from com.meti.rule.TypeRule;
class def Main() => {
    public static final TypeRule IMPORT

    static {
        var last = Last(Left("{ ", Right($("child"), " }")), " from ", $("parent"));
        IMPORT = Type("import", Left("import ", Right(last, ";\n")));
    }

    public static final TypeRule CLASS

    static {
        var node = Node("content", Type("block", Lang.BLOCK));
        var name = Strip($("name"));
        CLASS = Type("class", First(Discard, "class def ", First(name, "() => ", node)));
    }

    public static void main(String[] args) {
        var source = Paths.get(".", "magmac", "src", "java", "com", "meti", "Main.java");
        try {
            var input = Files.readString(source);
            var target = source.resolveSibling("Main.mgs");
            var outputContent = compile(input);
            var output = String.join("", outputContent);
            Files.writeString(target, output);
        } catch (IOException e) {
            throw new RuntimeException(source.toAbsolutePath().toString(), e);
        }
    }

    private static List<String> compile(String input) {
        return split(input)
                .stream()
                .map(String::strip)
                .map(Main::compileRootElement)
                .flatMap(Optional::stream)
                .collect(Collectors.toList());
    }

    private static Optional<String> compileRootElement(String stripped) {
        if (stripped.isEmpty() || stripped.startsWith("package ")) return Optional.empty();
        return lex(stripped).flatMap(Main::renderImpl);
    }

    private static Optional<String> renderImpl(MapNode node) {
        return IMPORT.toString(node)
                .or(() -> CLASS.toString(node))
                .or(() -> getRender(node));
    }

    private static Optional<String> getRender(MapNode node) {
        return new MagmaRenderer(node).render();
    }

    private static Optional<MapNode> lex(String stripped) {
        return JavaLang.ROOT_RULES.get("root")
                .stream()
                .map(rule -> rule.fromString(stripped))
                .flatMap(Optional::stream)
                .findFirst()
                .flatMap(MapNode::fromTuple);
    }}