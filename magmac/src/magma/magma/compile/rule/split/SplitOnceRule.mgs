		tuple : var=
		
		searcher.search(input).map(() => {
			
			left1 : var=
			
			input.substring(0, keywordIndex);
			
			right1 : var=
			
			input.substring(keywordIndex+slice.length());
			return Tuple(left1, right1);
		});
		return tuple.map(() => {
			
			left : var=
			
			contentStart.left();
			
			right : var=
			
			contentStart.right();
			
