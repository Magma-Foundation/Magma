		});
	}
	public def fromNode(node : Node) => {
		
		leftResult : var=
		
		leftRule.fromNode(node);
		
		rightValue : var=
		
		rightRule.fromNode(node);
		return leftResult.flatMapValue(() => rightValue.mapValue(() => left+slice+right)).mapErr(() => createError(node, err));
	}
