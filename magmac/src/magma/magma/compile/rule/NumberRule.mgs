object NumberRule {
	def allDigits(this : Self, input : String) => {
		if
		(input.isEmpty())
		return false;
		
		i : int=
		
		0;
		while
		(i<input.length())
		{
			
			c : var=
			
			input.charAt(i);
			if
			(!Character.isDigit(c))
			{
				return false;
			}
			i++;
		}
		return true;
	}
	def computeMessage(this : Self) => "Not a number.";
	def filter(this : Self, input : String) => input.startsWith("-")?allDigits(input.substring(1)):allDigits(input);
}